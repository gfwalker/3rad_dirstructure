#!/bin/bash

##This is a slurm job file that runs populations to output a vcf file from your stacks files

##NECESSARY JOB SPECIFICATIONS
#SBATCH --job-name=populations_M3_
#SBATCH --time=00:30:00
#SBATCH --nodes=1
#SBATCH --ntasks=2
#SBATCH --mem=4G
#SBATCH --output=/scratch/user/u.gw200825/ScHH_3RAD/stacks/unfiltered.out.%j


#Executable Lines
module load GCC/12.2.0
module load OpenMPI/4.1.4
module load Stacks/2.64

#move to main ScHH directory
cd /scratch/user/u.gw200825/ScHH_3RAD

#run populations
populations -P ./stacks/parameter_optimization/M3 -M ./popmap/schh_popmap.txt -O ./stacks/unfiltered -p 3 --write-single-snp --vcf
